{
  "manifest_version": 3,
  "name": "Random Horse Image New Tab",
  "version": "1.0",
  "description": "Display a random horse image on new tab.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://script.google.com/*"],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
